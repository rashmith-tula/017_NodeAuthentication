<html>
  <head>
   <title>Authentication Demo</title>
   <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
   <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
   <link rel="stylesheet" type="text/css" href="main.css">
  </head>

 <body>
   <nav class="navbar navbar-dark bg-dark">
     <!--<div class="container-fluid">-->
      <a class="navbar-brand" href="#">Authentication</a>  
      <!--<div class="container">-->
       <ul class="nav justify-content-center">
         <% if(currentUser) { %>
          <li class="nav-item">
           <a class="nav-link" id="cuser" href="#"> Logged in as '<%= currentUser.username %>' </a>  
          </li>  
         <% } %>
       </ul>
       <ul class="nav justify-content-end">
         <li class="nav-item">
           <a class="nav-link" id="signup" href="/signup"><i class="fa fa-user-plus"></i> Signup</a>  
         </li>  
         <% if(!currentUser) { %>
           <li class="nav-item">
            <a class="nav-link" id="login" href="/"><i class="fa fa-sign-in"></i> Login</a>  
           </li> 
         <% } else { %>
           <li class="nav-item">
             <a class="nav-link" id="logout" href="/Logout"><i class="fa fa-sign-out"></i> Logout</a>  
           </li> 
         <% } %>
       </ul>
      </div>
     </div>
   </nav>